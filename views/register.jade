extends layout

block head
  title Register

block content
  .container.backBox
   form#register(action='/register', method='POST')
      h1 Register your account!
      p.login Already have an account?
        a(href="/login") Login here!
      div
        label(for='login_username') Username:
        input#login_username(type='text', name='username', class="field required", title="Please provide a username")
      div
        label(for='login_password') Password: 
        input#login_password(type='password', name='password', class="field required", title="Password is required")
      div
        label(for='confirm_password') Confirm Password: 
        input#confirm_password(type='password', name='confirm', class="field required", title="Password is required")
      p.forgot: a(href="forgotpassword") Forgot your password?
      .submit
        button(type='submit') Register